termcapinfo xterm*|rxvt*|kterm*|Eterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'

vbell off
vbell_msg       " *beep* "

multiuser on
acladd root

hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %d/%m %c "

defscrollback 5000000

termcapinfo xterm* ti@:te@

